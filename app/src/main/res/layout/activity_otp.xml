<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OtpActivity">

    <EditText
        android:id="@+id/editTextOtp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="65dp"
        android:ems="10"
        android:hint="Enter OTP"
        android:inputType="textPersonName"
        android:text="Enter OTP"
        app:layout_constraintBottom_toTopOf="@+id/VerifyOtp"
        app:layout_constraintEnd_toStartOf="@+id/progressBarOtp" />

    <Button
        android:id="@+id/VerifyOtp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="278dp"
        android:text="Verify OTP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/otp_feedBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Working. . . . . . . . . . . . . "
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/VerifyOtp" />

    <ProgressBar
        android:id="@+id/progressBarOtp"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="39dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/VerifyOtp"
        app:layout_constraintEnd_toEndOf="@+id/VerifyOtp"
        app:layout_constraintTop_toTopOf="@+id/VerifyOtp" />
</androidx.constraintlayout.widget.ConstraintLayout>